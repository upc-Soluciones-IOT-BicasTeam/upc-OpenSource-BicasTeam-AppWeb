.modal {
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: 0;
  left: 0;
  width: 120%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5); /* Fondo semitransparente */
  z-index: 1000;
}

.modal-content {
  background-color: #ffffff;
  border-radius: 16px;
  padding: 30px;
  width: 90%;
  max-width: 100px;
  max-height: 80%;
  overflow-y: auto; /* Permite desplazamiento vertical */
  box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2); /* Sombra moderna */
  animation: fadeIn 0.3s;
  scrollbar-width: none; /* Oculta la barra de desplazamiento en Firefox */
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(-20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.close {
  position: absolute;
  top: 10px;
  right: 15px;
  font-size: 1.5rem;
  color: #888;
  cursor: pointer;
  transition: color 0.3s;
}

.close:hover {
  color: #333;
}

